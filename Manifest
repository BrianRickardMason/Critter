[crittwork]
policy = broker ; One of the following: multicast, broker.

[crittworkMulticast]
multicast = epgm://127.0.0.1;239.192.1.1:5555

[crittworkBroker]
brokerPublisher  = tcp://127.0.0.1:2222 ; For a Critter "publish", for the Broker "subscribe".
brokerSubscriber = tcp://127.0.0.1:4444 ; For a Critter "subscribe", for the Broker "publish".

[heartbeat]
period   = 1 ; The number of seconds between heartbeats.
maxDelay = 2 ; The maximal number of periods that the heartbeat might not be received.
